    "devDependencies": {
        "@codeceptjs/configure": "^0.10.0",
        "@codeceptjs/examples": "^1.2.1",
        "@codeceptjs/ui": "^0.4.7",
        "@playwright/test": "^1.28.1",
        "@types/node": "^18.11.10",
        "codeceptjs": "^3.3.7",
